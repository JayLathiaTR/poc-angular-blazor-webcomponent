@page "/counter"

<style>
    .my-component {
    border: 2px dashed black;
    padding: 1em;
    margin: 1em 0;
}
</style>

<div class="my-component">
    <p role="status">Current count: @currentCount</p>
    <saf-button appearance="primary" @onclick="IncrementCount">
        <saf-icon slot="start" icon-name="timer" appearance="solid"></saf-icon>
        Saffron Count
    </saf-button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}