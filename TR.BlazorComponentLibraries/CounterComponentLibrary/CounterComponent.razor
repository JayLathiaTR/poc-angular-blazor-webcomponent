@page "/counter"

<style>
    .my-component {
    border: 2px dashed orangered;
    padding: 1em;
    margin: 1em 0;
}
</style>

<div class="my-component">
    <p role="status">Current count: @currentCount</p>
    <p role="status">Current stepper: @StepCount</p>
    <p role="status">Set Time: @SetDetails?.MyTime</p>
    <p role="status">User ID: @SetDetails?.UserId</p>
    <p role="status">User Name: @SetDetails?.UserName</p>
    <saf-button appearance="primary" @onclick="IncrementCount">
        <saf-icon slot="start" icon-name="timer" appearance="solid"></saf-icon>
        Saffron Count
    </saf-button>
</div>

@code {
    private int currentCount = 0;

    [Parameter]
    public int StepCount { get; set; } = 1;

    [Parameter]
    public CounterDetails SetDetails { get; set; } = new CounterDetails();

    private void IncrementCount()
    {
        currentCount += StepCount;
    }

    public class CounterDetails
    {
        public DateTime MyTime { get; set; } = DateTime.MinValue;

        public int UserId { get; set; }

        public string UserName { get; set; } = string.Empty;
    }
}